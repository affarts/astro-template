---
import Container from '@components/Container/Container'
import Modal from '@components/ui/Modal/Modal'
import UIKitLayout from '@layouts/UI-kit/UI-kit'
import UiKitItem from '@layouts/UI-kit/UiKitItem'
import Button from '@ui/Button/Button'
---

<UIKitLayout>
  <div class="ui">
    <Container>
      <h1 class="ui-title">UI-kit</h1>
      <section data-ui-section>
        <h2 class="ui__title" data-ui-title>Кнопки</h2>
        <UiKitItem code={'<Button text="Классическая кнопка" />'}>
          <Button text="Классическая кнопка" />
        </UiKitItem>
        <UiKitItem
          code={'<Button icon="icon-close" text="Кнопка с иконкой" />'}
        >
          <Button icon="icon-close" text="Кнопка с иконкой" />
        </UiKitItem>
        <UiKitItem
          code={'<Button icon="arrow-left" text="Кнопка с иконкой" />'}
        >
          <Button icon="arrow-left" text="Кнопка с иконкой" />
        </UiKitItem>
        <UiKitItem code={'<Button mods={[\'fill\']} text="Кнопка с фоном" />'}>
          <Button mods={['fill']} text="Кнопка с фоном" />
        </UiKitItem>
        <UiKitItem
          code={'<Button mods={[\'fill\']} as="a" href="#" text="Кнопка ссылка" />'}
        >
          <Button mods={['fill']} as="a" href="#" text="Кнопка ссылка" />
        </UiKitItem>
      </section>
      <section data-ui-section>
        <h2 class="ui__title" data-ui-title>Модальные окна</h2>
        <UiKitItem
          code={'<Button text="Стандартная модалка" modal="example" />'}
        >
          <Button text="Стандартная модалка" modal="example" />
        </UiKitItem>
      </section>
    </Container>
  </div>
  <Modal name="example">
    <h1>Example modal</h1>
  </Modal>
</UIKitLayout>

