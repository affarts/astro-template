---
import Layout from '@layouts/root/root'
import Container from '@components/Container/Container'
import logoImg from '@images/logo.svg'
import { Image } from 'astro:assets'

const pageList = [
  {
    name: 'UI-kit',
    href: '/ui-kit'
  },
  {
    name: 'Главная',
    href: 'index.html'
  }
]
---

<Layout title="Список страниц">
  <main>
    <div class="sitemap">
      <Container mod="big">
        <div class="sitemap__logo">
          <Image src={logoImg} alt="logo" />
        </div>
        <h1>Список страниц</h1>
        <ol>
          {
            pageList.map((item) => (
              <li>
                <a href={item.href}>{item.name}</a>
              </li>
            ))
          }
        </ol>
      </Container>
    </div>
  </main>
</Layout>

<style lang="scss">
  .sitemap {
    width: 100%;
    height: 100%;
    min-height: 100vh;
    padding-top: 30px;

    background-color: var(--color-white);

    &__logo {
      margin-bottom: 30px;

      width: 100%;
      max-width: 300px;
      height: 80px;

      img {
        object-fit: contain;
        width: auto;
        height: 100%;
      }
    }

    ol {
      margin-top: 20px;
      padding-left: 20px;
      list-style: decimal;

      li {
        &:not(:last-child) {
          margin-bottom: 16px;
        }

        a {
          font-size: 18px;
          color: var(--color-black);
        }
      }
    }
  }
</style>
