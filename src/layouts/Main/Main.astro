---
import Layout from '@layouts/root/root'
import Header from '@components/Header/Header'
import Footer from '@components/Footer/Footer'

interface Props {
  title: string
}

const { title } = Astro.props
---

<Layout title={title}>
  <div class="wrapper">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </div>
  <slot name="fixed" />
  <slot name="modals" />
</Layout>
